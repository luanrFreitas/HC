@model IEnumerable<HustleCastle.Models.Tutorial>

@{
    ViewData["Title"] = "Index";
}

<div class="card">
    <div class="card-header text-center">
        <h4>Dicas</h4>
    </div>

    <div class="card-body">
        <a asp-action="Criar" class="btn btn-primary">Nova dica</a>
        <div class="table-responsive pt-1">
            <table class="table table-bordered text-center" width="100%" cellspacing="0">
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.ActionLink(item.Title, "Detalhes", new { id = item.ID })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>